<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_wight_alpha0"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_time_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        android:textAlignment="center"
        android:paddingHorizontal="@dimen/margin_small"
        tools:text="23:00"/>

    <Space
        android:layout_width="@dimen/size_space_today"
        android:layout_height="@dimen/size_space_today"/>
    
    <ImageView
        android:id="@+id/iv_weather_today"
        android:layout_width="@dimen/size_weather_today"
        android:layout_height="@dimen/size_weather_today"
        android:background="@drawable/icon_sunny"/>

    <Space
        android:layout_width="@dimen/size_space_today"
        android:layout_height="@dimen/size_space_today"/>

    <TextView
        android:id="@+id/tv_temperature_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        android:textAlignment="center"
        tools:text="-25â„ƒ"/>

</LinearLayout>